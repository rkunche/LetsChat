<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.techsol.letschat.ui.ChatActivity"
    android:background="@drawable/darkbg"
    tools:showIn="@layout/chat_activity">
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="60dp"
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/edit_text_id_parent_id"
        android:scrollbars="vertical" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/edit_text_id_parent_id"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentBottom="true"

        android:layout_marginBottom="4dp"
        android:layout_height="54dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:id="@+id/edit_text_id"
            android:paddingLeft="10dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/round_edit_text_drawable"
            android:layout_marginBottom="2dp"
            android:layout_toLeftOf="@+id/send"/>
        <TextView
            android:layout_width="60dp"
            android:id="@+id/send"
            android:layout_centerVertical="true"
            android:layout_height="54dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:background="@drawable/round_send_drawable"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:text="SEND"/>
    </RelativeLayout>
</RelativeLayout>
