<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.techsol.letschat.ui.fragments.PollFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:gravity="center"
                android:id="@+id/q_id"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:text="Q) What is your pet name?"
                android:layout_margin="12dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:visibility="gone"
                android:id="@+id/option_1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:visibility="gone"
                android:id="@+id/option_2"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:visibility="gone"
                android:id="@+id/option_3"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:visibility="gone"
                android:id="@+id/option_4"
                />
            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/done_id"
                android:visibility="gone"
                android:layout_marginLeft="2dp"
                android:text="Create poll"/>
        </LinearLayout>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="3dp" >
        <RelativeLayout
android:id="@+id/edit_text_layout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/text_enter_id"
                android:layout_toLeftOf="@+id/more_id"
                android:imeOptions="actionDone"
                android:layout_margin="12dp"/>
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:id="@+id/more_id"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:background="@color/colorPrimary"
                    android:text="Add"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
