<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view_holder_id"
        android:orientation="horizontal">

        <!--<ImageView-->
            <!--android:id="@+id/profile_img_id"-->
            <!--android:layout_width="58dp"-->
            <!--android:layout_height="58dp"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:src="@drawable/smiley" />-->
        <TextView

            android:layout_width="56dp"
            android:layout_height="56dp"
            android:text="R"
            android:id="@+id/name_letter_id"
            android:layout_marginTop="2dp"
            android:background="@drawable/round_text"
            android:gravity="center"
            android:maxLines="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/profile_name_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="2dp"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/profile_date_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="4dp"
                    android:maxLines="1"
                    android:text="Yesterday" />
            </RelativeLayout>

            <TextView
                android:id="@+id/profile_qoute_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:lines="1"
                android:text="Live the life the way it is" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="0dp"
        android:background="@color/gray" />
</RelativeLayout>